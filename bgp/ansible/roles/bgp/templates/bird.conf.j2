router id {{ as_id }};
log syslog all;

protocol kernel {
  persist;
  scan time 10;
  import all;
  export all;
}

protocol bgp {
  local as {{ asn }};
  neighbor {{ neighbor_ip }} as {{ neighbor_asn }};
  graceful restart;
  next hop self;
  import all;
  export all;
}

protocol device {
  scan time 10;
}

protocol direct {
  interface "*";
}

